<div class="container" id="content">
<h1 class="main-text">
A Cutiepie was born today,<br>17 years ago!
</h1>
<button class="btn" onclick="showCake()">üéÅ Start the surprise</button>
</div>

<script>

function showCake(){
document.getElementById("content").innerHTML=`
<div class="cake-wrapper">
<div class="cake" id="cake">
<div class="candle">
<div class="flame" id="flame"></div>
</div>
<div class="top"></div>
<div class="layer"></div>
<div class="drip d1"></div>
<div class="drip d2"></div>
<div class="drip d3"></div>
</div>
<button class="btn" onclick="lightCandle(this)">üïØ Light Candle</button>
</div>
`;
}

function lightCandle(btn){
document.getElementById("flame").style.opacity="1";
btn.innerText="üí® Blow Candle";
btn.onclick=function(){blowCandle(btn);}
}

function blowCandle(btn){
document.getElementById("flame").style.opacity="0";
btn.remove();

let msg=document.createElement("div");
msg.className="message";
msg.innerText="Happy Birthday to you dear Shama ‚ú®";
document.querySelector(".cake-wrapper").appendChild(msg);

let cutBtn=document.createElement("button");
cutBtn.innerText="üç∞ Cut Cake";
cutBtn.className="btn";
cutBtn.onclick=cutCake;
document.querySelector(".cake-wrapper").appendChild(cutBtn);
}

function cutCake(){
let cake=document.getElementById("cake");
cake.classList.add("cut");
launchConfetti();
setTimeout(showDiary,1500);
}

function showDiary(){
let wrapper=document.querySelector(".cake-wrapper");
wrapper.innerHTML+=`
<div class="diary" id="diary">
<div class="diary-title">A Note From Amir</div>
</div>
<button class="btn" onclick="openDiary()">üìñ Open Diary</button>
<div class="page" id="page">
Dear Shama,<br><br>
You are the most special person in my life.  
May your smile always shine brighter than candles.  
Happy Birthday once again ‚ù§Ô∏è
</div>
`;
}

function openDiary(){
document.getElementById("diary").classList.add("open");
document.getElementById("page").style.display="block";
}

function launchConfetti(){
for(let i=0;i<60;i++){
let conf=document.createElement("div");
conf.className="confetti";
conf.style.left=Math.random()*100+"vw";
conf.style.backgroundColor=`hsl(${Math.random()*360},100%,50%)`;
conf.style.animationDuration=(2+Math.random()*2)+"s";
document.body.appendChild(conf);
setTimeout(()=>conf.remove(),3000);
}
}

</script>

